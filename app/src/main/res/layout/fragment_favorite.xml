<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="mx.com.pruebajobrappi.ui.favorite.FavoriteFragment">

    <TextView
        android:id="@+id/tvEmptyFavoritesMovies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/normal_separation"
        android:text="@string/text_empty_favorites"
        android:textAlignment="center"
        android:textSize="@dimen/text_list_size_big"
        app:layout_constraintBottom_toBottomOf="@+id/rvFavoriteMovies"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFavoriteMovies"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



    <ProgressBar
        android:id="@+id/pgrsFavoritesMovies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:background="@color/colorFooter"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>